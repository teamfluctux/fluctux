{
  "name": "@fluctux/logger",
  "version": "1.0.0",
  "description": "Shared Logger",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "check:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/ --max-warnings 1000",
    "fix:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/ --fix --max-warnings=1000",
    "check:types": "tsc --noEmit --listFiles",
    "clean": "rm -rf node_modules dist .turbo && echo 'Cleanup complete!'"
  },
  "dependencies": {
    "winston": "^3.18.3"
  },
  "license": "ISC"
}
