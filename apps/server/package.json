    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "express": "^5.1.0",
    "googleapis": "^150.0.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "8.9.5",
    "morgan": "^1.10.1",
