    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9",
    "google-auth-library": "^10.5.0",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@octokit/auth-oauth-app": "^9.0.1",
    "@octokit/core": "^7.0.2",
