  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts --port 5000",
    "start": "node dist/index.cjs",
    "check:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/ --max-warnings 1000",
    "fix:lint": "eslint . --cache --cache-location node_modules/.cache/eslint/ --fix --max-warnings=1000",
    "check:types": "tsc --noEmit",
    "build": "tsup",
    "clean": "rm -rf node_modules .turbo && echo 'Cleanup complete!'",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio --port 5001 --verbose",
    "db:reset": "tsx ./src/database/pg/reset.db.ts",
    "db:seed": "tsx ./src/database/pg/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
